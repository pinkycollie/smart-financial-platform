# =============================================================================
# MBTQ Smart Financial Platform - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
FLASK_APP=main.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/mbtq_platform

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# Session Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# CSRF Protection
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# Content Security Policy
CSP_ENABLED=True

# -----------------------------------------------------------------------------
# OAuth 2.0 Configuration
# -----------------------------------------------------------------------------
OAUTH_AUTHORIZATION_URL=https://api.mbtquniverse.com/oauth/authorize
OAUTH_TOKEN_URL=https://api.mbtquniverse.com/oauth/token
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# -----------------------------------------------------------------------------
# API Keys & Authentication
# -----------------------------------------------------------------------------
# Comma-separated list of valid API keys
VALID_API_KEYS=api-key-1,api-key-2,api-key-3

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# -----------------------------------------------------------------------------
# External Service APIs - Video & ASL Services
# -----------------------------------------------------------------------------
# Mux Video API
MUX_TOKEN_ID=your-mux-token-id
MUX_TOKEN_SECRET=your-mux-token-secret
MUX_WEBHOOK_SECRET=your-mux-webhook-secret

# VSL Labs (ASL Interpretation Service)
VSL_API_KEY=your-vsl-labs-api-key
VSL_API_URL=https://api.vsl.com/v1
VSL_ENVIRONMENT=sandbox

# ASL Now (Alternative ASL Service)
ASL_NOW_API_KEY=your-asl-now-api-key
ASL_NOW_ENVIRONMENT=sandbox

# SignASL Integration
SIGNASL_API_KEY=your-signasl-api-key
SIGNASL_ENVIRONMENT=sandbox

# Sign VRI Client
SIGN_VRI_API_KEY=your-sign-vri-api-key
SIGN_VRI_ENVIRONMENT=sandbox

# -----------------------------------------------------------------------------
# Financial Services APIs
# -----------------------------------------------------------------------------
# April Tax API
APRIL_API_URL=https://api.getapril.com
APRIL_CLIENT_ID=your-april-client-id
APRIL_CLIENT_SECRET=your-april-client-secret
APRIL_ENVIRONMENT=sandbox

# Boost Insurance API
BOOST_API_URL=https://api.boostinsurance.io
BOOST_CLIENT_ID=your-boost-client-id
BOOST_CLIENT_SECRET=your-boost-client-secret
BOOST_ENVIRONMENT=sandbox

# Open Insurance API
OPEN_INSURANCE_API_KEY=your-open-insurance-api-key
OPEN_INSURANCE_API_URL=https://api.openinsurance.io/v1

# MBTQ Open Insurance Client
MBTQ_INSURANCE_API_KEY=your-mbtq-insurance-api-key

# -----------------------------------------------------------------------------
# Payment Processing
# -----------------------------------------------------------------------------
# CheddarGetter Billing
CHEDDAR_USERNAME=your-cheddar-username
CHEDDAR_PASSWORD=your-cheddar-password
CHEDDAR_PRODUCT_CODE=mbtq-platform

# Stripe (if using Stripe for payments)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# -----------------------------------------------------------------------------
# AI & Content Services
# -----------------------------------------------------------------------------
# OpenAI API (for ASL AI services)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Investopedia Integration (for financial education content)
INVESTOPEDIA_API_KEY=your-investopedia-api-key

# -----------------------------------------------------------------------------
# Email & Communication
# -----------------------------------------------------------------------------
# Email Service (SendGrid, Mailgun, etc.)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@mbtquniverse.com
EMAIL_SUPPORT=support@mbtquniverse.com

# SMS/Text Services (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# Cloud Storage
# -----------------------------------------------------------------------------
# AWS S3 (for document storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=mbtq-documents
AWS_REGION=us-east-1

# Alternative: Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_CONTAINER_NAME=mbtq-documents

# -----------------------------------------------------------------------------
# Monitoring & Logging
# -----------------------------------------------------------------------------
# Application Monitoring
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/application.log

# New Relic (optional)
NEW_RELIC_LICENSE_KEY=your-new-relic-key
NEW_RELIC_APP_NAME=MBTQ Smart Financial Platform

# Datadog (optional)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# -----------------------------------------------------------------------------
# Cache & Session Storage
# -----------------------------------------------------------------------------
# Redis (for caching and session management)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password
CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_RESELLER_SYSTEM=True
FEATURE_MINIAPPS=True
FEATURE_ASL_AI=True
FEATURE_EDUCATION_MODULE=True
FEATURE_WEBHOOKS=True

# -----------------------------------------------------------------------------
# Reseller System Configuration
# -----------------------------------------------------------------------------
RESELLER_REVENUE_SHARE=0.15
RESELLER_TIER_THRESHOLD_BRONZE=10
RESELLER_TIER_THRESHOLD_SILVER=50
RESELLER_TIER_THRESHOLD_GOLD=100

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,https://mbtquniverse.com
CORS_ALLOW_CREDENTIALS=True

# -----------------------------------------------------------------------------
# Testing & Development
# -----------------------------------------------------------------------------
# Test Database (use separate database for testing)
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/mbtq_platform_test

# Debug Settings
DEBUG_TB_ENABLED=False
DEBUG_TB_INTERCEPT_REDIRECTS=False

# Mock External APIs (for testing)
MOCK_EXTERNAL_APIS=False
